<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce7e8"
    tools:context=".MainActivity">

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:theme="@style/Base.CardView"
        app:button_background="@drawable/shape_button"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/baseline_lock_24"
        app:button_image_enabled="@drawable/baseline_lock_open_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="Swipe to unlock"
        app:inner_text_background="@drawable/shape_rounded"
        app:inner_text_bottom_padding="16dp"
        app:inner_text_color="@color/white"
        app:inner_text_size="16dp"
        app:inner_text_top_padding="16dp" />

</RelativeLayout>